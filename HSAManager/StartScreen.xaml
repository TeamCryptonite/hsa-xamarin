<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HSAManager.StartScreen">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Team Cryptonite HSA Manager" VerticalOptions="Start" HorizontalTextAlignment="Center"
                   HorizontalOptions="FillAndExpand" />
            <Label Text="Sign up or Sign in to Begin" VerticalOptions="Start" HorizontalTextAlignment="Center"
                   HorizontalOptions="FillAndExpand" />
            <BoxView Color="Transparent" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
            <Button x:Name="btnSignUpSignIn" Text="Sign up or Sign in" Clicked="OnSignUpSignIn" VerticalOptions="End"
                    HorizontalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage.Content>


</ContentPage>