<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HSAManager.StartScreen">
	<ContentPage.Content>
		<StackLayout Margin="0,10,0,0">
			<Label Text="Team Cryptonite HSA Manager" VerticalOptions="Start" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" FontSize="17"/>
			<Label Text="Sign up or Sign in to Begin" VerticalOptions="Start" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" FontSize="17"/>
			<BoxView Color="Transparent" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
			<Button x:Name="btnSignUpSignIn" Text="Sign Up/ Sign In" Clicked="OnSignUpSignIn" VerticalOptions="End" HorizontalOptions="FillAndExpand" Margin="40,0,40,10" BorderRadius="5" BackgroundColor="#00b377" TextColor="White" FontAttributes="Bold" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>