<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HSAManager.OCREntry">
	<ContentPage.Content>
		<ScrollView x:Name="ScrollView" Orientation="Vertical">
            <StackLayout x:Name="StackLayout">
                <Button Text="Take a Photo" Clicked="TakePhotoButton_OnClicked" BorderRadius="5" BackgroundColor="#00b377" TextColor="White" FontAttributes="Bold" Margin="40,70,40,0"/>
                <Button Text="Pick a Photo" Clicked="PickPhotoButton_OnClicked" BorderRadius="5" BackgroundColor="#00b377" TextColor="White" FontAttributes="Bold" Margin="40,70,40,0"/>
				<ActivityIndicator x:Name="OcrActivityIndicator" Color="Black" IsRunning="False"></ActivityIndicator>
            </StackLayout>
        </ScrollView>
	</ContentPage.Content>
</ContentPage>