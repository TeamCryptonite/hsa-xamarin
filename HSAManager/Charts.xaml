<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HSAManager.Charts"
             Title="Spending Over Time Trends">
    <StackLayout Orientation="Vertical">
        <ActivityIndicator x:Name="ActivityIndicator" Color="Black" IsRunning="False"></ActivityIndicator>
        <StackLayout>
			<StackLayout Margin="10,0,10,0">
				<Label Text="Start Date" Margin="0,15,0,0" HorizontalTextAlignment="Center" />
	            <DatePicker x:Name="StartDate" VerticalOptions="StartAndExpand" PropertyChanged="Date_OnPropertyChanged">
	                <DatePicker.Format>MMMM d, yyyy</DatePicker.Format>
	            </DatePicker>
			</StackLayout>
			<StackLayout Margin="10,0,10,0">
				<Label Text="End Date" Margin="0,15,0,0" HorizontalTextAlignment="Center" />
	            <DatePicker x:Name="EndDate" VerticalOptions="StartAndExpand" PropertyChanged="Date_OnPropertyChanged">
	                <DatePicker.Format>MMMM d, yyyy</DatePicker.Format>
	            </DatePicker>
			</StackLayout>
        </StackLayout>
        <WebView x:Name="ChartBrowser" VerticalOptions="StartAndExpand" WidthRequest="1000" HeightRequest="1000"></WebView>
    </StackLayout>
</ContentPage>