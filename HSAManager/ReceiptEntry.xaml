					<Entry Text="date"/>
				<Label HorizontalOptions="StartAndExpand" Text="Product"></Label>
				<Label HorizontalOptions="EndAndExpand" Text="Price"></Label>
				<TableView>
					<TableView.Root>
						<TableSection>
							<ViewCell>
								<StackLayout Orientation = "Horizontal">
									<Label Text="Product" VerticalTextAlignment="Center"></Label>
									<Entry Text="test"></Entry>
									<Label Text= "price" VerticalTextAlignment="Center" HorizontalOptions="EndAndExpand"></Label>
									<Entry Text="test2"></Entry>
								</StackLayout>

							</ViewCell>
						</TableSection>
					</TableView.Root>
				</TableView>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>
